<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ForgotPass.Forgot_otp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_otp_you_received"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/guide1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_200"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/btn_f_otp_back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow___back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:text="OTP"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit1"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_16sdp"
        android:textStyle="bold"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        android:hint="0"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toLeftOf="@+id/f_edit2" />

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit2"
        android:gravity="center"
        android:singleLine="true"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_3sdp"
        android:textStyle="bold"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        android:hint="0"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintLeft_toRightOf="@+id/f_edit1"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toLeftOf="@+id/f_edit3" />

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit3"
        android:gravity="center"
        android:singleLine="true"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_3sdp"
        android:textStyle="bold"
        android:hint="0"
        android:layout_marginEnd="@dimen/_3sdp"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/f_edit2"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toLeftOf="@+id/f_edit4" />

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit4"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:fontFamily="@font/poppins"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_3sdp"
        android:textStyle="bold"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        android:hint="0"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintLeft_toRightOf="@+id/f_edit3"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toLeftOf="@+id/f_edit5" />

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit5"
        android:gravity="center"
        android:singleLine="true"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_3sdp"
        android:textStyle="bold"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        android:hint="0"
        android:layout_marginEnd="@dimen/_3sdp"
        app:layout_constraintLeft_toRightOf="@+id/f_edit4"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toLeftOf="@+id/f_edit6" />

    <EditText
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/otp_shape"
        android:id="@+id/f_edit6"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:singleLine="true"
        android:textSize="@dimen/_24sdp"
        android:maxLength="1"
        android:inputType="phone"
        android:layout_marginStart="@dimen/_3sdp"
        android:textStyle="bold"
        android:hint="0"
        android:layout_marginEnd="@dimen/_16sdp"
        android:textColorHint="#6f6f6f"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/f_edit5"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        app:layout_constraintRight_toRightOf="parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        app:layout_constraintTop_toBottomOf="@+id/guide2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/btn_f_otp_next"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardBackgroundColor="#a9a9a9"
            app:cardCornerRadius="@dimen/_14sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow___right" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>